{% extends '::base.html.twig' %}

{% block body -%}
    <div class="span12">

        <div class="widget widget-table">

            <div class="widget-header">
                <h3>
                    <i class="icon-th-list"></i>
                    Listado de accesos
                </h3>
            </div>

            <div class="widget-content">
                <table class="table table-striped table-bordered table-highlight" id="example">
                    <thead>
                    <tr>
                        <th>Cliente</th>
                        <th>Taquilla</th>
                        <th>Fecha entrada</th>
                        <th>Fecha Salida</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('client_edit', { 'id': entity.id }) }}">{{ entity.client }}</a></td>
                            <td>{{ entity.locker }}</td>
                            <td>{% if entity.startDate %}{{ entity.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{% if entity.endDate %}{{ entity.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('access_show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('access_edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{% endblock %}
